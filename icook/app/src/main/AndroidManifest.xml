<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jordan.icook">


    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application

        android:allowBackup="true"
        android:icon="@mipmap/icook_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icook_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Splash"
            android:screenOrientation="locked"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".receipt_Scanner"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".PantryActivity"
            android:label="@string/title_activity_pantry"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".HelpActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".RecipeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".RecipePullUp"
            android:screenOrientation="portrait"/>
        <activity android:name=".ListRecipe"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
        <activity android:name=".ListPantry"
            android:screenOrientation="portrait"/>
        <activity android:name=".PreferencesActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".NormalUser"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".VeganUser"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".VegUser"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".what_i_can_cook"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>
